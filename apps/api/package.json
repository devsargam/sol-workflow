    "@repo/solana": "workspace:*",
    "@repo/types": "workspace:*",
    "@solana/web3.js": "^1.98.0",
    "bullmq": "^5.35.7",
    "croner": "^8.1.2",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.11.3",
    "ioredis": "^5.4.1",
    "utils": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3"
