{
  "name": "sol-workflow",
  "version": "0.1.0",
  "private": true,
  "description": "Solana-native automation platform for DAO operators and NFT community managers",
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\" \"pnpm --filter worker dev\" \"pnpm --filter listener dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:worker": "pnpm --filter worker dev",
    "dev:listener": "pnpm --filter listener dev",
    "build": "pnpm --filter web build && pnpm --filter api build && pnpm --filter worker build && pnpm --filter listener build",
    "db:generate": "pnpm --filter db generate",
    "db:migrate": "pnpm --filter db migrate",
    "db:studio": "pnpm --filter db studio",
    "db:push": "pnpm --filter db push",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "typescript": "^5.3.3",
    "ultracite": "7.0.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
